{
  "name": "nodely",
  "version": "0.0.17",
  "description": "Write Node code using whatever syntax you want.",
  "main": "lib/index.js",
  "bin": {
    "nodely": "./lib/index.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "./lib/index.js -s ./src -o ./lib",
    "postpublish": "codecov",
    "prepublishOnly": "npm run build",
    "test": "lintly src && flow && jest"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dogma-io/nodely.git"
  },
  "keywords": [
    "babel",
    "cluster",
    "clustering",
    "compile",
    "compiler",
    "es2015",
    "es6",
    "flow",
    "flowjs",
    "modules",
    "node",
    "transpile",
    "transpiler"
  ],
  "author": "Matthew Dahl <https://github.com/dogma-io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dogma-io/nodely/issues"
  },
  "homepage": "https://github.com/dogma-io/nodely#readme",
  "devDependencies": {
    "codecov": "3.0.0",
    "jest-cli": "21.2.1",
    "lintly": "0.0.7"
  },
  "dependencies": {
    "babel-core": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "6.24.1",
    "flow-bin": "0.59.0",
    "glob": "7.1.2",
    "mkdirp": "0.5.1",
    "node-watch": "0.5.5",
    "yargs": "10.0.3"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "json-summary",
      "lcov"
    ],
    "testRegex": "/__tests__/.*-test\\.js$"
  }
}
